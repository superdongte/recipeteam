<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_above="@+id/fieldTitle"
        android:layout_marginBottom="-171dp"
        app:srcCompat="@drawable/ic_set_meal" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="171dp"
        android:layout_height="144dp"
        android:layout_above="@+id/imageView4"
        android:layout_marginBottom="-7dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/fieldTitle"
        android:layout_marginBottom="172dp" />

    <EditText
        android:id="@+id/fieldTitle"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/backgound_round_white"
        android:ems="10"
        android:hint="제목"
        android:letterSpacing="0.2"
        android:maxLines="1"
        android:minHeight="48dp"
        android:padding="8dp"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fieldContent"
        android:layout_width="395dp"
        android:layout_height="250dp"
        android:layout_below="@+id/fieldTitle"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/backgound_round_white"
        android:ems="10"
        android:hint="작성할 내용"
        android:inputType="textMultiLine"
        android:letterSpacing="0.2"
        android:maxLines="10"
        android:padding="20dp"
        android:scrollHorizontally="false"
        android:textSize="23dp"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSubmitPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/stat_sys_upload"
        app:backgroundTint="@color/colorPrimary"
        app:tint="#ffffff"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fabSubmitPost"
        android:layout_marginBottom="-67dp" />

</RelativeLayout>
